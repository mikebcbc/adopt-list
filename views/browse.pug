extends layout

block content
	h2= title
	.adoptable-pets
		each pet in data
			.pet
				.photo
					img(src=pet.media.photos.photo[0])
				.name= pet.name.$t
				.description
					p= pet.description.$t
				.action
					a(href="", class="add-to-list") ADD TO LIST
					a(href="") CONTACT SHELTER
	script(src='//code.jquery.com/jquery-3.2.1.min.js')
	script(src='/javascripts/client.js')